@model PersonCreateModel;

@{
    ViewData["Title"] = "Create new person";
}

<div class="">
    <h1 class="display-4 text-center">Create new person</h1>
    <div class="row"></div>
    <form asp-controller="Rookies" asp-action="Create" method="post" class="col-6 mx-auto">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" type="text" placeholder="Ngo">
            <span asp-validate-for="FirstName" class="text-danger form-text"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" type="text" placeholder="Truong">
            <span asp-validate-for="LastName" class="text-danger form-text"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender">Gender</label>
            <select class="form-control" asp-for="Gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" class="form-control" type="date">
            <span asp-validate-for="DateOfBirth" class="text-danger form-text"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" type="text">
            <span asp-validate-for="PhoneNumber" class="text-danger form-text"></span>
        </div>
        <div class="form-group">
            <label asp-for="BirthPlace"></label>
            <input asp-for="BirthPlace" class="form-control" type="text">
            <span asp-validate-for="BirthPlace" class="text-danger form-text"></span>
        </div>
        <button type="submit" class="my-3 btn btn-primary">Submit</button>
    </form>
</div>
<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>