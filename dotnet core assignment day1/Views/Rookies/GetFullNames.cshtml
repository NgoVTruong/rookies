@model List<dotnet_core_assignment_day1.Models.PersonModel>;

@{
    ViewData["Title"] = "Rookies Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <div><b></b><br /></div>
    <table class="table table-bordered table-responsive table-hover">
        <tr>
            <th>FullName</th>
